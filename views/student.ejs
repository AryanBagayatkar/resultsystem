<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Basic reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
            color: black;
            margin: 0;
            padding: 20px;
        }

        .profile-summary p {
            margin: 5px 0;
            color: black;
        }

        .profile-summary .percentage {
            color: #ffc107;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #f1f1f1;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #ffc107;
            color: #1a1a2e;
        }

        td {
            background-color: #fff;
            color: black;
        }
        tbody{
            text-transform: uppercase;
        }

        /* Button styles */
        .actions {
            text-align: end;
            margin-top: 20px;
        }

        .actions button {
            padding: 10px 20px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            background-color: #ffc107;
            color: #1a1a2e;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .actions button:hover {
            background-color: #ffcc29;
            transform: scale(1.1);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
        }

        .actions button:active {
            transform: scale(1);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }
        .line{
            color: black;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .profile-summary {
                padding: 10px;
            }

            th, td {
                font-size: 14px;
            }

            .actions button {
                font-size: 14px;
                padding: 8px 16px;
            }
        }
        .gg{
            display: flex;
            justify-content: space-evenly;
            margin: 50px;
        }
        .gg div{
            width: 100%;
        }
        .gg p{
            padding: 10px 20px;
            border-bottom: 2px solid black;
            text-transform: uppercase;
            color: black;
        }
    </style>
</head>
<body>
    <div class="container1">
        <div class="gg">
            <div>
                <p><strong>Username:</strong> <%= student.username %></p>
            <p><strong>Roll No:</strong> <%= student.rollno %></p>
            </div>
            <hr class="line">
            <div>
                <p class="percentage">Percentage: <%= student.percentage %>%</p> 
                <p><strong>Exam Month:</strong> <%= student.examMonth %></p>
            </div>
        </div>
        <!-- Table for subjects -->
        <table border="1">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Marks</th>
                    <th>Grade</th>
                    <th>IA</th>
                    <th>TW</th>
                </tr>
            </thead>
            <tbody>
                <% student.subjects.forEach(subject => { %>
                    <tr>
                        <td><%= subject.name %></td>
                        <td><%= subject.marks %></td>
                        <td><%= subject.grade %></td>
                        <td><%= subject.IA%></td>
                        <td><%= subject.TW%></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <div class="actions">
        <button onclick="printPage()">Print</button>
        <button onclick="downloadPDF()">Download</button>
    </div>
    <script>
        // Function to print the page
        function printPage() {
            window.print();
        }

        // Function to download the content as a PDF
        function downloadPDF() {
            const element = document.querySelector('.container1');  // Select the entire body content for download
            const options = {
                margin: 1,
                filename: 'studentresult.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
            };

            // Use html2pdf library to generate the PDF
            html2pdf().from(element).set(options).save();
        }
    </script>

    <!-- Include the html2pdf.js library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
</body>
</html>
