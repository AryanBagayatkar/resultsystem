<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Student</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h1 class="text-center mb-4">Update Student Details</h1>
            <form action="/admin/updateStudent/<%= student.username %>" method="POST">
                <!-- Exam Month Field -->
                <div class="mb-3">
                    <label for="examMonth" class="form-label">Exam Month:</label>
                    <input type="text" name="examMonth" id="examMonth" class="form-control" value="<%= student.examMonth %>" required>
                </div>

                <div class="mb-3">
                    <label for="rollno" class="form-label">Roll Number:</label>
                    <input type="number" name="rollno" id="rollno" class="form-control" value="<%= student.rollno %>" required>
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Username:</label>
                    <input type="text" name="username" id="username" class="form-control" value="<%= student.username %>" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="text" name="password" id="password" class="form-control" value="<%= student.password %>" required>
                </div>

                <h3 class="mb-3">Update Subjects</h3>
                <% student.subjects.forEach((subject, index) => { %>
                    <div class="mb-3">
                        <label class="form-label">Subject <%= index + 1 %>:</label>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <input type="text" name="subjects[<%= index %>][name]" class="form-control" value="<%= subject.name %>" required placeholder="Subject Name">
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="subjects[<%= index %>][marks]" class="form-control" value="<%= subject.marks %>" required placeholder="Marks">
                            </div>
                            <div class="col-md-4">
                                <input type="text" name="subjects[<%= index %>][grade]" class="form-control" value="<%= subject.grade %>" required placeholder="Grade">
                            </div>
                        </div>
                        <!-- IA and TW for each subject -->
                        <div class="row g-3 mt-3">
                            <div class="col-md-4">
                                <input type="number" name="subjects[<%= index %>][IA]" class="form-control" value="<%= subject.IA %>" placeholder="Internal Assessment Marks" required>
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="subjects[<%= index %>][TW]" class="form-control" value="<%= subject.TW %>" placeholder="Term Work Marks" required>
                            </div>
                        </div>
                    </div>
                <% }) %>
                    
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Update Student</button>
                    <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
