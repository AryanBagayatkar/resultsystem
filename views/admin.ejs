<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .actr{
            background: linear-gradient(16deg,#ff4e59,#111);
        }
        .act1{
            color: white;
        }
        .foad{
            border-radius: 50px;
        }
    </style>
</head>
<body class="bg-light actr">
    <div class="container my-5">
        <h1 class="text-start mb-4 act1">Admin Dashboard</h1>
        
        <!-- Create New Student Account Form -->
        <form action="/createStudent" method="POST" class="border rounded p-4 bg-white shadow-sm foad">
            <h2 class="mb-3">Create New Student Account</h2>
            
            <div class="mb-3">
                <input type="text" name="rollno" class="form-control" placeholder="Roll Number" required>
            </div>
            <div class="mb-3">
                <input type="text" name="username" class="form-control" placeholder="Student Username" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" class="form-control" placeholder="Student Password" required>
            </div>
            <div class="mb-3">
                <input type="text" name="examMonth" class="form-control" placeholder="Semester" required>
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Status:</label>
                <select name="status" id="status" class="form-select" required>
                    <option value="pass">Pass</option>
                    <option value="fail">Fail</option>
                </select>
            </div>
            <h3 class="mt-4">Add Subjects</h3>
            <div id="subjects-container">
                <!-- Subject Fields -->
                <% for (let i = 0; i < 5; i++) { %>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" name="subjects[<%= i %>][name]" class="form-control" placeholder="Subject <%= i + 1 %> Name" required>
                        </div>
                        <div class="col-md-4">
                            <input type="number" name="subjects[<%= i %>][marks]" class="form-control" placeholder="Marks" required>
                        </div>
                        <div class="col-md-4">
                            <input type="text" name="subjects[<%= i %>][grade]" class="form-control" placeholder="Grade (e.g., A+)" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="number" name="subjects[<%= i %>][IA]" class="form-control" placeholder="Internal Assessment Marks" required>
                        </div>
                        <div class="col-md-4">
                            <input type="number" name="subjects[<%= i %>][TW]" class="form-control" placeholder="Term Work Marks" required>
                        </div>
                    </div>                    
                <% } %>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Create Student</button>
        </form>
        <div class="mt-2">
            <a href="/admin/studentList" class="btn btn-primary">Student List</a>
            <a href="/" class="btn btn-primary ">Logout</a>
        </div>
     
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
